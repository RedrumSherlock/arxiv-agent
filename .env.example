# Arxiv Agent Configuration

# Search Configuration
# Papers published between TRACE_BACK_DAYS_START and TRACE_BACK_DAYS_END days ago
TRACE_BACK_DAYS_START=30
TRACE_BACK_DAYS_END=23
SEARCH_TOPICS=machine learning,large language models,AI agents
ARXIV_CATEGORIES=cs.AI,cs.LG,cs.CL
ACCEPTANCE_CRITERIA=Papers related to AI agents, LLM applications, autonomous systems, or novel machine learning architectures
MAX_ITEMS=5
SCORE_THRESHOLD=50

# Batch sizes for LLM processing
FILTER_BATCH_SIZE=100
SCORER_BATCH_SIZE=50

# LLM API Configuration (OpenAI-compatible endpoint, e.g., LiteLLM, Azure OpenAI)
API_KEY=your-api-key
API_ENDPOINT=https://your-litellm-endpoint/v1

# Model names for each agent (all use the same API_KEY above)
MODEL_FILTER=gemini-3-flash
MODEL_SCORER=gemini-3-flash
MODEL_ANALYZER=gemini-3-pro

# Tavily API for web search (community feedback)
TAVILY_API_KEY=your-tavily-api-key

# Notification - Email (via Brevo)
EMAIL_ADDRESS_LIST=user1@example.com,user2@example.com
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=noreply@yourdomain.com
BREVO_SENDER_NAME=Arxiv Agent

# Notification - Webhook (leave empty to disable)
WEBHOOK_URL=
